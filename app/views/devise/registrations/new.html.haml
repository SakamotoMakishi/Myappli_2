.login_body
  = render 'books/header'#ヘッダーのビューファイル
  = render 'books/top_contents'  #トップ画面の実装
  .login_setup
    %h2 Signup
    .login_form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .label
          .label__li
            = f.label :email
          .label__li
            = f.email_field :email, autofocus: true, placeholder: 'メールアドレスを入力'
        .label
          .label__li
            = f.label :password
          - if @validatable
            %i
              (#{@minimum_password_length} characters minimum)
          .label__li
            = f.password_field :password, autocomplete: "off", placeholder: 'パスワードを入力'
        .label
          .label__li
            = f.label :password_confirmation
          .label__li
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワードを入力（確認）'
        .label
          .label__li
            = f.label :name
          .label__name
            = f.text_field :name, placeholder: 'ニックネームを入力(必須)'
        .field
          = f.label :アバター画像
          .label__ava
            = f.file_field :avatar
        .submit
          = f.submit
        .link_box_sin
          .link_box_sin__links
          .link_box_sin__link
            = render "devise/shared/links"
